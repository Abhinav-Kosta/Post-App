<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Post</title>
    <link rel="stylesheet" href="/style2.css">
</head>
<body>
    <nav class="navbar">
        <div class="navbar-content">
            <a href="/posts" class="navbar-brand">Insta App</a>
            <button class="menu-toggle">â˜°</button>
            <div class="nav-links">
                <a href="/posts/new" class="btn btn-primary">Create Post</a>
                <button class="theme-toggle">
                    <span class="theme-icon">ðŸŒ™</span>
                    <span>Toggle Theme</span>
                </button>
            </div>
        </div>
    </nav>

    <div class="form-container">
        <h2>Edit Post</h2>
        <div class="post-content">
            <h3 class="post-caption"><%= post.caption %></h3>
        </div>

        <form method="post" action="/posts/<%= post.id %>?_method=PATCH">
            <div class="form-group">
                <label class="form-label">Image URL</label>
                <input 
                    type="text" 
                    name="imageUrl" 
                    class="form-input"
                    value="<%=post.imageUrl%>"
                    required
                >
            </div>

            <div class="form-group">
                <label class="form-label">Content</label>
                <textarea 
                    name="content" 
                    class="form-input"
                    rows="4"
                    required
                ><%=post.content%></textarea>
            </div>
            
            <div class="comments-section">
                <h4>Edit Comments</h4>
                <% for(let comment of post.comments){ %>
                    <div class="comment">
                        <textarea 
                            name="description[]" 
                            class="form-input"
                            rows="2"
                            required
                        ><%= comment.description %></textarea>
                        <input type="hidden" name="commentId[]" value="<%= comment.id %>">
                    </div>
                <% } %>
            </div>

            <div class="post-actions">
                <button class="btn btn-primary">Save Changes</button>
                <a href="/posts" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <script src="/theme.js"></script>
    <script src="/menu.js"></script>
</body>
</html>