<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Detail</title>
    <link rel="stylesheet" href="/style2.css">
</head>
<body>
    <nav class="navbar">
        <div class="navbar-content">
            <a href="/posts" class="navbar-brand">Insta App</a>
            <button class="menu-toggle">â˜°</button>
            <div class="nav-links">
                <a href="/posts/new" class="btn btn-primary">Create Post</a>
                <button class="theme-toggle">
                    <span class="theme-icon">ðŸŒ™</span>
                    <span>Toggle Theme</span>
                </button>
            </div>
        </div>
    </nav>

    <div class="post-detail">
        <div class="post-card">
            <img src="<%=post.imageUrl%>" alt="Post image" class="post-image">
            
            <div class="post-content">
                <h3 class="post-caption"><%= post.caption %></h3>
                <p class="post-text"><%=post.content%></p>
                
                <div class="comments-section">
                    <h4>Comments</h4>
                    <% for(comment of post.comments){ %>
                        <div class="comment">
                            <p><%= comment.description %></p>
                            <form method="post" action="/posts/comments/<%=comment.id%>?_method=DELETE">
                                <input type="hidden" name="postId" value="<%=post.id%>">
                                <button class="btn btn-secondary">Delete Comment</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="form-container">
            <form method="post" action="/posts/<%=post.id%>/comments">
                <div class="form-group">
                    <textarea 
                        name="description" 
                        placeholder="Add your comment here" 
                        class="form-input"
                        rows="4"
                    ></textarea>
                </div>
                <button class="btn btn-primary">Add Comment</button>
            </form>
        </div>

        <div class="post-actions">
            <a href="/posts" class="btn btn-secondary">Back to Posts</a>
        </div>
    </div>

    <script src="/theme.js"></script>
    <script src="/menu.js"></script>
</body>
</html>